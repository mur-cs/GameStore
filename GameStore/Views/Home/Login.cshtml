@{
    Layout = "_NotLoggedInLayout";
}

@model User

<div class="login-panel">
    <h2 class="text-center">Вхід до системи</h2>
    <form asp-action="Index" asp-controller="Home" method="get">
        <div class="mb-3">
            <label for="username" class="form-label">Имя пользователя</label>
            <input asp-for="UserName" type="text" class="form-control" id="username" placeholder="" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Пароль</label>
            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="" required>
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Увійти</button>
        </div>
    </form>
</div>